<UserControl x:Class="Erronka.Views.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Erronka.ViewModels">
    <!-- DataContext removed from XAML; set in code-behind -->

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>    <!-- toolbar -->
            <RowDefinition Height="3*"/>     <!-- grid -->
            <RowDefinition Height="Auto"/>   <!-- editor -->
            <RowDefinition Height="Auto"/>   <!-- buttons -->
        </Grid.RowDefinitions>

        <!-- Toolbar with New button -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,8">
            <Button Content="+" Width="28" Height="28" ToolTip="Nuevo usuario" Command="{Binding NewCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}"
                  AutoGenerateColumns="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Izena" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Izen osoa" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Rola" Binding="{Binding Role}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Simple editor bound to SelectedUser -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" >
                <TextBlock Text="Username" Margin="0,0,0,4"/>
                <TextBox Text="{Binding SelectedUser.Username, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Full name" Margin="0,8,0,4"/>
                <TextBox Text="{Binding SelectedUser.FullName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Role" Margin="0,8,0,4"/>
                <ComboBox SelectedValue="{Binding SelectedUser.Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Content">
                    <ComboBoxItem Content="Admin" />
                    <ComboBoxItem Content="User" />
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0" VerticalAlignment="Top">
                <TextBlock Text="Password (enter to change)" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock FontStyle="Italic" FontSize="11" Foreground="Gray" Text="Leave blank to keep existing password." Margin="0,6,0,0"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Gehitu" Command="{Binding AddCommand}" Margin="5"/>
            <Button Content="Aldatu" Command="{Binding UpdateCommand}" Margin="5"/>
            <Button Content="Ezabatu" Command="{Binding DeleteCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>