<Window x:Class="Erronka.Views.TicketPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket" Height="400" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="15">
        <TextBlock Text="Zure Ticket-a" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="{Binding ProductName}" Width="120"/>
                        <TextBlock Text="{Binding Quantity}" Width="40"/>
                        <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:C}}" Width="80" TextAlignment="Right"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Separator Margin="0,10"/>
        <TextBlock Text="{Binding Total, StringFormat='Guztira: {0:C}'}" FontWeight="Bold" HorizontalAlignment="Right"/>
        <Button Content="Itxi" Command="{Binding CloseCommand}" Margin="10" HorizontalAlignment="Center" Width="80"/>
    </StackPanel>
</Window>